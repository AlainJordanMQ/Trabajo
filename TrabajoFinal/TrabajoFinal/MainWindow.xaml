<Window x:Class="TrabajoFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrabajoFinal"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
   
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Foreground="#FF007ACC" FontStyle="Italic" FontSize="25">Mi Pequeño Enfermito</TextBlock>
        <TextBlock Margin="0,15">Menu de opciones:</TextBlock>
        <Button x:Name="btnNuevaCategoria" Click="btnNuevaCategoria_Click" >Registrar Nueva Categoria</Button>
        <Button x:Name="btnIngresarInformacion" Click="btnIngresarInformacion_Click" >Ingresar informacion de Categoria</Button>
        <Button x:Name="btnInventarios" Click="btnInventarios_Click">Inventarios</Button>
        <Button x:Name="btnVenta" Click="btnVenta_Click">Realizar ventas</Button>
        <Button x:Name="btnEmpleado" Click="btnEmpleado_Click">Empleados</Button>
        <Button x:Name="btnSalir" Click="btnSalir_Click">Salir</Button>
    </StackPanel>
</Window>
